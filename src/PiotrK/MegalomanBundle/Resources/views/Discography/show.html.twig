{% extends '::base.html.twig' %}

{% block body -%}
  <h3>Dyskografia {{entity.owner}}</h3>
  <div class="search-form">
    <form id="search" method="POST" action="{{ path('discography_search', {'id': entity.id }) }}">
      {{ form_start(search_form) }}
        {{ form_row(search_form.artist) }}
        {{ form_row(search_form.album) }}
      {{ form_end(search_form) }}
    </form>
  </div>
  <div id="table-container">
    {{ include("MegalomanBundle:Discography:discography-table.html.twig" , {'discography': entity} )}}
  </div>

  <ul class="list-unstyled">
    <li>
      <a href="{{ path('discography') }}">
        wróć do listy
      </a>
    </li>
    <li>
      <a href="{{ path('discography_edit', { 'id': entity.id }) }}">
        edytuj
      </a>
    </li>
  </ul>
{% endblock %}
