{% extends '::base.html.twig' %}

{% block body -%}
  <h3>Lista dyskografii</h3>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Właściciel</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for entity in entities %}
        <tr>
          <td>
            <a href="{{ path('discography_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
          </td>
          <td>{{entity.owner}}</td>
          <td>
            <ul class="list-unstyled">
              <li>
                <a href="{{ path('discography_show', { 'id': entity.id }) }}">pokaż</a>
              </li>
              <li>
                <a href="{{ path('discography_edit', { 'id': entity.id }) }}">edytuj</a>
              </li>
            </ul>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
