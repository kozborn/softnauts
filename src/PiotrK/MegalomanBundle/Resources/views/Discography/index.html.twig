{% extends '::base.html.twig' %}

{% block body -%}
  <h3>Lista dyskografii</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Właściciel</th>
        <th>Liczba albumów</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
      <tr>
        <td>
          <a href="{{ path('discography_show', { 'id': entity.id }) }}">{{entity}}</a>
        </td>
        <td>{{entity.albums|length}}</td>
        <td></td>
      </tr>
    {% endfor %}
  </tbody>
</table>
</tbody>
{% endblock %}
